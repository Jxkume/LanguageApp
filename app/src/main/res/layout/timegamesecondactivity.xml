<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/timegame_background">

    <include
        android:id="@+id/include"
        layout="@layout/timegame_layout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/timeGameSecondOptionBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/timegameoption2" />

    <ImageView
        android:id="@+id/timeGameSecondOption"
        android:layout_width="231dp"
        android:layout_height="233dp"
        app:layout_constraintBottom_toBottomOf="@+id/timeGameSecondOptionBackground"
        app:layout_constraintEnd_toEndOf="@+id/timeGameSecondOptionBackground"
        app:layout_constraintStart_toStartOf="@+id/timeGameSecondOptionBackground"
        app:layout_constraintTop_toTopOf="@+id/timeGameSecondOptionBackground" />

    <ImageView
        android:id="@+id/timeGameSecondTextBackground1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeGameSecondOptionBackground"
        app:srcCompat="@drawable/timegametext" />

    <ImageView
        android:id="@+id/timeGameSecondTextBackground2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeGameSecondOptionBackground"
        app:srcCompat="@drawable/timegametext" />

    <ImageView
        android:id="@+id/timeGameSecondTextBackground3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeGameSecondTextBackground1"
        app:srcCompat="@drawable/timegametext" />

    <ImageView
        android:id="@+id/timeGameSecondTextBackground4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeGameSecondTextBackground2"
        app:srcCompat="@drawable/timegametext" />

    <TextView
        android:id="@+id/timeGameSecondText1"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/timeGameSecondTextBackground1"
        app:layout_constraintEnd_toEndOf="@+id/timeGameSecondTextBackground1"
        app:layout_constraintStart_toStartOf="@+id/timeGameSecondTextBackground1"
        app:layout_constraintTop_toTopOf="@+id/timeGameSecondTextBackground1" />

    <TextView
        android:id="@+id/timeGameSecondText2"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/timeGameSecondTextBackground2"
        app:layout_constraintEnd_toEndOf="@+id/timeGameSecondTextBackground2"
        app:layout_constraintStart_toStartOf="@+id/timeGameSecondTextBackground2"
        app:layout_constraintTop_toTopOf="@+id/timeGameSecondTextBackground2" />

    <TextView
        android:id="@+id/timeGameSecondText3"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/timeGameSecondTextBackground3"
        app:layout_constraintEnd_toEndOf="@+id/timeGameSecondTextBackground3"
        app:layout_constraintStart_toStartOf="@+id/timeGameSecondTextBackground3"
        app:layout_constraintTop_toTopOf="@+id/timeGameSecondTextBackground3" />

    <TextView
        android:id="@+id/timeGameSecondText4"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/timeGameSecondTextBackground4"
        app:layout_constraintEnd_toEndOf="@+id/timeGameSecondTextBackground4"
        app:layout_constraintStart_toStartOf="@+id/timeGameSecondTextBackground4"
        app:layout_constraintTop_toTopOf="@+id/timeGameSecondTextBackground4" />

</androidx.constraintlayout.widget.ConstraintLayout>