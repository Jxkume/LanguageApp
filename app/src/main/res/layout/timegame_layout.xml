<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/timeGameIcon2"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/timegameicon" />

    <ImageView
        android:id="@+id/timeGameExitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/timegameexit" />

    <ImageView
        android:id="@+id/timeGameProgressBarBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/timegameprogressbarbackground" />

    <ProgressBar
        android:id="@+id/timeGameProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/timegameprogressbar"
        android:layout_width="319dp"
        android:layout_height="15dp"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="@+id/timeGameProgressBarBackground"
        app:layout_constraintEnd_toEndOf="@+id/timeGameProgressBarBackground"
        app:layout_constraintStart_toStartOf="@+id/timeGameProgressBarBackground"
        app:layout_constraintTop_toTopOf="@+id/timeGameProgressBarBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>