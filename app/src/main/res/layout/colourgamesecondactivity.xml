<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colourgame_background">

    <include
        android:id="@+id/include"
        layout="@layout/colourgame_layout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/colourGameSecondOptionBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/colourgameoption2" />

    <ImageView
        android:id="@+id/colourGameSecondOption"
        android:layout_width="231dp"
        android:layout_height="233dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/colourGameSecondOptionBackground"
        app:layout_constraintEnd_toEndOf="@+id/colourGameSecondOptionBackground"
        app:layout_constraintStart_toStartOf="@+id/colourGameSecondOptionBackground"
        app:layout_constraintTop_toTopOf="@+id/colourGameSecondOptionBackground" />

    <ImageView
        android:id="@+id/colourGameSecondTextBackground1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colourGameSecondOptionBackground"
        app:srcCompat="@drawable/colourgametext" />

    <ImageView
        android:id="@+id/colourGameSecondTextBackground2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="28dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colourGameSecondOptionBackground"
        app:srcCompat="@drawable/colourgametext" />

    <ImageView
        android:id="@+id/colourGameSecondTextBackground3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="119dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/colourgametext" />

    <ImageView
        android:id="@+id/colourGameSecondTextBackground4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="119dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/colourgametext" />

    <TextView
        android:id="@+id/colourGameSecondText1"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        android:textSize="30sp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/colourGameSecondTextBackground1"
        app:layout_constraintEnd_toEndOf="@+id/colourGameSecondTextBackground1"
        app:layout_constraintStart_toStartOf="@+id/colourGameSecondTextBackground1"
        app:layout_constraintTop_toTopOf="@+id/colourGameSecondTextBackground1" />

    <TextView
        android:id="@+id/colourGameSecondText2"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        android:textSize="30sp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/colourGameSecondTextBackground2"
        app:layout_constraintEnd_toEndOf="@+id/colourGameSecondTextBackground2"
        app:layout_constraintStart_toStartOf="@+id/colourGameSecondTextBackground2"
        app:layout_constraintTop_toTopOf="@+id/colourGameSecondTextBackground2" />

    <TextView
        android:id="@+id/colourGameSecondText3"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        android:textSize="30sp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/colourGameSecondTextBackground3"
        app:layout_constraintEnd_toEndOf="@+id/colourGameSecondTextBackground3"
        app:layout_constraintStart_toStartOf="@+id/colourGameSecondTextBackground3"
        app:layout_constraintTop_toTopOf="@+id/colourGameSecondTextBackground3" />

    <TextView
        android:id="@+id/colourGameSecondText4"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        android:textSize="30sp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/colourGameSecondTextBackground4"
        app:layout_constraintEnd_toEndOf="@+id/colourGameSecondTextBackground4"
        app:layout_constraintStart_toStartOf="@+id/colourGameSecondTextBackground4"
        app:layout_constraintTop_toTopOf="@+id/colourGameSecondTextBackground4" />

</androidx.constraintlayout.widget.ConstraintLayout>