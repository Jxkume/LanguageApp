<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/timegame_background">

    <include layout="@layout/timegame_layout" />

    <ImageView
        android:id="@+id/timeGameFirstOptionBackground1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="212dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintEnd_toStartOf="@+id/timeGameFirstOptionBackground2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/timegameoption" />

    <ImageView
        android:id="@+id/timeGameFirstOptionBackground3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="234dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/timeGameFirstOptionBackground4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeGameFirstOptionBackground1"
        app:srcCompat="@drawable/timegameoption" />

    <ImageView
        android:id="@+id/timeGameFirstOptionBackground4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="234dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/timeGameFirstOptionBackground3"
        app:layout_constraintTop_toBottomOf="@+id/timeGameFirstOptionBackground2"
        app:srcCompat="@drawable/timegameoption" />

    <ImageView
        android:id="@+id/timeGameFirstOptionBackground2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="18dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/timeGameFirstOptionBackground1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/timegameoption" />

    <ImageView
        android:id="@+id/timeGameFirstTextBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="119dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/timegametext" />

    <TextView
        android:id="@+id/timeGameSecondText2"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        android:textSize="22sp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/timeGameFirstTextBackground"
        app:layout_constraintEnd_toEndOf="@+id/timeGameFirstTextBackground"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/timeGameFirstTextBackground"
        app:layout_constraintTop_toTopOf="@+id/timeGameFirstTextBackground"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/timeGameFirstOption1"
        android:layout_width="125dp"
        android:layout_height="126dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/timeGameFirstOptionBackground1"
        app:layout_constraintEnd_toEndOf="@+id/timeGameFirstOptionBackground1"
        app:layout_constraintStart_toStartOf="@+id/timeGameFirstOptionBackground1"
        app:layout_constraintTop_toTopOf="@+id/timeGameFirstOptionBackground1" />

    <ImageView
        android:id="@+id/timeGameFirstOption2"
        android:layout_width="125dp"
        android:layout_height="126dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/timeGameFirstOptionBackground2"
        app:layout_constraintEnd_toEndOf="@+id/timeGameFirstOptionBackground2"
        app:layout_constraintStart_toStartOf="@+id/timeGameFirstOptionBackground2"
        app:layout_constraintTop_toTopOf="@+id/timeGameFirstOptionBackground2" />

    <ImageView
        android:id="@+id/timeGameFirstOption3"
        android:layout_width="125dp"
        android:layout_height="126dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/timeGameFirstOptionBackground3"
        app:layout_constraintEnd_toEndOf="@+id/timeGameFirstOptionBackground3"
        app:layout_constraintStart_toStartOf="@+id/timeGameFirstOptionBackground3"
        app:layout_constraintTop_toTopOf="@+id/timeGameFirstOptionBackground3" />

    <ImageView
        android:id="@+id/timeGameFirstOption4"
        android:layout_width="125dp"
        android:layout_height="126dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/timeGameFirstOptionBackground4"
        app:layout_constraintEnd_toEndOf="@+id/timeGameFirstOptionBackground4"
        app:layout_constraintStart_toStartOf="@+id/timeGameFirstOptionBackground4"
        app:layout_constraintTop_toTopOf="@+id/timeGameFirstOptionBackground4" />

</androidx.constraintlayout.widget.ConstraintLayout>