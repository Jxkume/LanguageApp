<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/colourGameIcon2"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="47dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/colorgameicon" />

    <ImageView
        android:id="@+id/colourGameExitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/colourgameexit" />

    <ImageView
        android:id="@+id/colourGameProgressBarBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/colourgameprogressbarbackground" />

    <ProgressBar
        android:id="@+id/colourGameProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/colourgameprogressbar"
        android:layout_width="319dp"
        android:layout_height="15dp"
        android:soundEffectsEnabled="false"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="@+id/colourGameProgressBarBackground"
        app:layout_constraintEnd_toEndOf="@+id/colourGameProgressBarBackground"
        app:layout_constraintStart_toStartOf="@+id/colourGameProgressBarBackground"
        app:layout_constraintTop_toTopOf="@+id/colourGameProgressBarBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>