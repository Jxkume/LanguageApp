<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foodgame_background">

    <include
        android:id="@+id/include"
        layout="@layout/foodgame_layout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/foodGameSecondOptionBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foodgameoption2" />

    <ImageView
        android:id="@+id/foodGameSecondOption"
        android:layout_width="231dp"
        android:layout_height="233dp"
        app:layout_constraintBottom_toBottomOf="@+id/foodGameSecondOptionBackground"
        app:layout_constraintEnd_toEndOf="@+id/foodGameSecondOptionBackground"
        app:layout_constraintStart_toStartOf="@+id/foodGameSecondOptionBackground"
        app:layout_constraintTop_toTopOf="@+id/foodGameSecondOptionBackground" />

    <ImageView
        android:id="@+id/foodGameSecondTextBackground1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodGameSecondOptionBackground"
        app:srcCompat="@drawable/foodgametext" />

    <ImageView
        android:id="@+id/foodGameSecondTextBackground2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodGameSecondOptionBackground"
        app:srcCompat="@drawable/foodgametext" />

    <ImageView
        android:id="@+id/foodGameSecondTextBackground3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodGameSecondTextBackground1"
        app:srcCompat="@drawable/foodgametext" />

    <ImageView
        android:id="@+id/foodGameSecondTextBackground4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodGameSecondTextBackground2"
        app:srcCompat="@drawable/foodgametext" />

    <TextView
        android:id="@+id/foodGameSecondText1"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/foodGameSecondTextBackground1"
        app:layout_constraintEnd_toEndOf="@+id/foodGameSecondTextBackground1"
        app:layout_constraintStart_toStartOf="@+id/foodGameSecondTextBackground1"
        app:layout_constraintTop_toTopOf="@+id/foodGameSecondTextBackground1" />

    <TextView
        android:id="@+id/foodGameSecondText2"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/foodGameSecondTextBackground2"
        app:layout_constraintEnd_toEndOf="@+id/foodGameSecondTextBackground2"
        app:layout_constraintStart_toStartOf="@+id/foodGameSecondTextBackground2"
        app:layout_constraintTop_toTopOf="@+id/foodGameSecondTextBackground2" />

    <TextView
        android:id="@+id/foodGameSecondText3"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/foodGameSecondTextBackground3"
        app:layout_constraintEnd_toEndOf="@+id/foodGameSecondTextBackground3"
        app:layout_constraintStart_toStartOf="@+id/foodGameSecondTextBackground3"
        app:layout_constraintTop_toTopOf="@+id/foodGameSecondTextBackground3" />

    <TextView
        android:id="@+id/foodGameSecondText4"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/foodGameSecondTextBackground4"
        app:layout_constraintEnd_toEndOf="@+id/foodGameSecondTextBackground4"
        app:layout_constraintStart_toStartOf="@+id/foodGameSecondTextBackground4"
        app:layout_constraintTop_toTopOf="@+id/foodGameSecondTextBackground4" />

</androidx.constraintlayout.widget.ConstraintLayout>