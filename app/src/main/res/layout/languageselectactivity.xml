<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/chooseLanguageFI"
        android:layout_width="190dp"
        android:layout_height="44dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:text="Valitse kieli:"
        android:textColor="@color/font"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chooseLanguageES"
        android:layout_width="289dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:text="Elige un idioma:"
        android:textColor="@color/font"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseLanguageFI" />

    <TextView
        android:id="@+id/chooseLanguageAR"
        android:layout_width="289dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:text="اختر لغة:"
        android:textColor="@color/font"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseLanguageES" />

    <ImageView
        android:id="@+id/flag_fi_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseLanguageAR"
        app:srcCompat="@drawable/flagbackgroundunchecked" />

    <ImageView
        android:id="@+id/flag_fi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/flag_fi_background"
        app:layout_constraintEnd_toEndOf="@+id/flag_fi_background"
        app:layout_constraintStart_toStartOf="@+id/flag_fi_background"
        app:layout_constraintTop_toTopOf="@+id/flag_fi_background"
        app:srcCompat="@drawable/flag_fi" />

    <ImageView
        android:id="@+id/flag_es_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flag_fi_background"
        app:srcCompat="@drawable/flagbackgroundunchecked" />

    <ImageView
        android:id="@+id/flag_ar_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flag_es_background"
        app:srcCompat="@drawable/flagbackgroundunchecked" />

    <ImageView
        android:id="@+id/flag_es"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/flag_es_background"
        app:layout_constraintEnd_toEndOf="@+id/flag_es_background"
        app:layout_constraintStart_toStartOf="@+id/flag_es_background"
        app:layout_constraintTop_toTopOf="@+id/flag_es_background"
        app:srcCompat="@drawable/flag_es" />

    <ImageView
        android:id="@+id/flag_ar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/flag_ar_background"
        app:layout_constraintEnd_toEndOf="@+id/flag_ar_background"
        app:layout_constraintStart_toStartOf="@+id/flag_ar_background"
        app:layout_constraintTop_toTopOf="@+id/flag_ar_background"
        app:srcCompat="@drawable/flag_ar" />

    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flag_ar_background"
        app:srcCompat="@drawable/usercreationbutton" />

    <TextView
        android:id="@+id/nextButtonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textSize="25dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:textColor="@color/font"
        app:layout_constraintBottom_toBottomOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="@+id/nextButton"
        app:layout_constraintStart_toStartOf="@+id/nextButton"
        app:layout_constraintTop_toTopOf="@+id/nextButton" />


</androidx.constraintlayout.widget.ConstraintLayout>