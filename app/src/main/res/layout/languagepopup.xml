<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="251dp"
    android:layout_height="354dp"
    android:layout_gravity="center"
    android:background="@drawable/languagepopupbackground">

    <TextView
        android:id="@+id/currentLanguageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:text="@string/current_language"
        android:textColor="@color/font"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/currentFlagInPopUp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentLanguageTextView"
        app:srcCompat="@drawable/flag_fi" />

    <TextView
        android:id="@+id/changeLanguageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/baloo2_extra"
        android:gravity="center"
        android:text="@string/change_language"
        android:textColor="@color/font"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentFlagInPopUp" />

    <ImageView
        android:id="@+id/changeLanguageOption1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeLanguageTextView"
        app:srcCompat="@drawable/flag_es" />

    <ImageView
        android:id="@+id/changeLanguageOption2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeLanguageTextView"
        app:srcCompat="@drawable/flag_ar" />

</androidx.constraintlayout.widget.ConstraintLayout>